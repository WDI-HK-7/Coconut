'use strict'; // Make sure you don't have syntax errors

// var app = angular.module('appName', ['oneDependency']);
var app = angular.module('coconut', ['ngRoute', 'ngFileUpload']);

app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  // Configure Angular Routes
  $routeProvider.
    when('/test', {
      templateUrl: "<%= asset_path('home/index.html') %>",
      controller: 'HomeCtrl'
    }).

  // --------------- User Login/SignUp page -----

    when('/', {
      templateUrl: "<%= asset_path('users/landing.html') %>",
      controller: 'LandingPageCtrl'
    }).

  // --------------- User Profile Page ----------

    when('/users/:id/profile', {
      templateUrl: "<%= asset_path('users/profile.html') %>",
      controller: 'UserProfileCtrl'
    }).

  // --------------- Posts index ----------------
    
    when('/posts', {
      templateUrl: "<%= asset_path('posts/index.html') %>",
      controller: 'PostCtrl'
    }).

  // --------------- Create Post ----------------

    when('/new_posts', {
      templateUrl: "<%= asset_path('posts/new.html') %>",
      controller: 'PostsNewCtrl'
    }).

  // --------------- Around ----------------

    when('/around', {
      templateUrl: "<%= asset_path('posts/around.html') %>",
      controller: 'AroundCtrl'
    })
  
  
    

    // $locationProvider.html5Mode(true);
}]);